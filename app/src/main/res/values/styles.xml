<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Game.Button" parent="android:Widget.Button">
        <item name="android:elevation">2dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/button_with_border</item>
    </style>

    <style name="Game.EditText" parent="android:Widget.EditText">
        <item name="android:textSize">@dimen/settingsPageTextSize</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">@drawable/selector_setup_edit_text</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Game.Cell" parent="android:Widget.ImageButton">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Game.HintSize" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/settingsPageTextSize</item>
    </style>

</resources>